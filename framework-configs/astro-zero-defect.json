{
  "framework": "Astro",
  "version": "4.x",
  "category": "Frontend",
  "description": "Zero Defect configuration for Astro projects",
  "biome": {
    "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
    "organizeImports": {
      "enabled": true
    },
    "linter": {
      "enabled": true,
      "rules": {
        "all": true,
        "recommended": true,
        "correctness": {
          "noUnusedVariables": "error",
          "useExhaustiveDependencies": "error"
        },
        "suspicious": {
          "noConsoleLog": "warn",
          "noDebugger": "error"
        },
        "performance": {
          "noDelete": "error",
          "noAccumulatingSpread": "error"
        },
        "security": {
          "noDangerouslySetInnerHtml": "error",
          "noGlobalEval": "error"
        },
        "style": {
          "useImportType": "error",
          "useConst": "error",
          "useTemplate": "error"
        }
      }
    },
    "formatter": {
      "enabled": true,
      "formatWithErrors": false,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 100,
      "lineEnding": "lf"
    }
  },
  "typescript": {
    "compilerOptions": {
      "target": "ES2020",
      "useDefineForClassFields": true,
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "module": "ESNext",
      "skipLibCheck": true,
      "moduleResolution": "bundler",
      "allowImportingTsExtensions": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "strictBindCallApply": true,
      "strictPropertyInitialization": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "exactOptionalPropertyTypes": true,
      "noImplicitOverride": true,
      "noPropertyAccessFromIndexSignature": true,
      "noUncheckedIndexedAccess": true,
      "baseUrl": ".",
      "paths": {
        "@/*": ["./src/*"],
        "@components/*": ["./src/components/*"],
        "@layouts/*": ["./src/layouts/*"]
      }
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.astro"],
    "exclude": ["node_modules/**/*", "dist/**/*"]
  },
  "dependencies": {
    "required": [
      "astro@^4.0.0",
      "typescript@^5.0.0",
      "zod@^3.22.0"
    ],
    "recommended": [
      "@biomejs/biome@^1.4.0",
      "tailwindcss@latest",
      "@tailwindcss/typography@latest",
      "@tailwindcss/forms@latest",
      "autoprefixer@latest",
      "postcss@latest",
      "@astrojs/check@^0.3.0",
      "@astrojs/ts-plugin@^1.0.0"
    ],
    "testing": [
      "vitest@^1.0.0",
      "@testing-library/dom@^9.0.0",
      "@testing-library/jest-dom@^6.0.0",
      "jsdom@^23.0.0"
    ]
  },
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "lint": "biome check .",
    "lint:fix": "biome check . --apply",
    "format": "biome format . --write",
    "type-check": "astro check",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "zero-check": "npm run type-check && npm run lint && npm run test"
  },
  "gitHooks": {
    "pre-commit": [
      "npm run type-check",
      "npm run lint",
      "npm run test -- --run",
      "git add ."
    ]
  },
  "vscode": {
    "settings": {
      "typescript.preferences.quotemark": "double",
      "editor.defaultFormatter": "biomejs.biome",
      "editor.formatOnSave": true,
      "editor.codeActionsOnSave": {
        "quickfix.biome": "explicit",
        "source.organizeImports.biome": "explicit"
      }
    },
    "extensions": [
      "biomejs.biome",
      "astro-build.astro-vscode"
    ]
  },
  "uiComponents": [
    {
      "name": "Astro UI",
      "description": "Component library optimized for Astro",
      "install": "npm install @astrojs/ui",
      "popularity": 70,
      "useCase": "static-site-generation",
      "documentation": "https://astro.build/docs/",
      "priority": "recommended"
    }
  ],
  "tailwindHacker": {
    "autoUpgrade": true,
    "version": "latest",
    "features": [
      "css-first-config",
      "container-queries", 
      "color-mix-functions",
      "cascade-layers",
      "property-api",
      "dynamic-utilities"
    ],
    "optimizations": {
      "purgeUnused": true,
      "minifyCSS": true,
      "treeshaking": true,
      "contentScanning": "advanced"
    },
    "hackerUtils": [
      "glass-morphism",
      "neomorphism", 
      "dynamic-gradients",
      "advanced-animations",
      "responsive-utilities"
    ]
  },
  "astroSpecific": {
    "islands": true,
    "partialHydration": true,
    "zeroJS": true,
    "staticGeneration": true,
    "componentFrameworks": ["react", "vue", "svelte", "preact"]
  },
  "securityRules": [
    "Sanitize data before server-side rendering",
    "Validate environment variables at build time",
    "Use Content Security Policy headers",
    "Implement proper input validation",
    "Avoid client-side secrets in static builds",
    "Use HTTPS in production",
    "Implement proper CORS policies",
    "Validate external data sources"
  ],
  "performanceRules": [
    "Use partial hydration for interactive components",
    "Optimize images with @astrojs/image",
    "Implement proper code splitting",
    "Use static generation when possible",
    "Minimize JavaScript bundle size",
    "Leverage Astro's zero-JS by default",
    "Use component frameworks only when needed",
    "Implement proper caching strategies"
  ]
}