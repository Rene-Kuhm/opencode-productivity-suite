{
  "framework": "Svelte",
  "version": "4.x",
  "category": "Frontend",
  "description": "Zero Defect configuration for Svelte projects",
  "biome": {
    "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
    "organizeImports": {
      "enabled": true
    },
    "linter": {
      "enabled": true,
      "rules": {
        "all": true,
        "recommended": true,
        "correctness": {
          "noUnusedVariables": "error",
          "useExhaustiveDependencies": "error"
        },
        "suspicious": {
          "noConsoleLog": "warn",
          "noDebugger": "error"
        },
        "performance": {
          "noDelete": "error",
          "noAccumulatingSpread": "error"
        },
        "security": {
          "noDangerouslySetInnerHtml": "error",
          "noGlobalEval": "error"
        },
        "style": {
          "useImportType": "error",
          "useConst": "error",
          "useTemplate": "error"
        }
      }
    },
    "formatter": {
      "enabled": true,
      "formatWithErrors": false,
      "indentStyle": "space",
      "indentWidth": 2,
      "lineWidth": 100,
      "lineEnding": "lf"
    }
  },
  "typescript": {
    "compilerOptions": {
      "target": "ES2020",
      "useDefineForClassFields": true,
      "lib": ["ES2020", "DOM", "DOM.Iterable"],
      "module": "ESNext",
      "skipLibCheck": true,
      "moduleResolution": "bundler",
      "allowImportingTsExtensions": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "strict": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "strictBindCallApply": true,
      "strictPropertyInitialization": true,
      "noImplicitAny": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "exactOptionalPropertyTypes": true,
      "noImplicitOverride": true,
      "noPropertyAccessFromIndexSignature": true,
      "noUncheckedIndexedAccess": true,
      "baseUrl": ".",
      "paths": {
        "$lib/*": ["./src/lib/*"],
        "$app/*": ["./node_modules/@sveltejs/kit/src/runtime/app/*"]
      }
    },
    "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.svelte"],
    "exclude": ["node_modules/**/*", ".svelte-kit/**/*"]
  },
  "dependencies": {
    "required": [
      "svelte@^4.0.0",
      "typescript@^5.0.0",
      "zod@^3.22.0"
    ],
    "recommended": [
      "@biomejs/biome@^1.4.0",
      "tailwindcss@latest",
      "@tailwindcss/typography@latest",
      "@tailwindcss/forms@latest",
      "autoprefixer@latest",
      "postcss@latest",
      "@sveltejs/kit@^1.20.0",
      "@sveltejs/adapter-auto@^2.0.0",
      "vite@^5.0.0",
      "@sveltejs/vite-plugin-svelte@^2.4.0"
    ],
    "testing": [
      "vitest@^1.0.0",
      "@testing-library/svelte@^4.0.0",
      "@testing-library/jest-dom@^6.0.0",
      "jsdom@^23.0.0"
    ]
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "biome check .",
    "lint:fix": "biome check . --apply",
    "format": "biome format . --write",
    "type-check": "svelte-check --tsconfig ./tsconfig.json",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "zero-check": "npm run type-check && npm run lint && npm run test"
  },
  "gitHooks": {
    "pre-commit": [
      "npm run type-check",
      "npm run lint",
      "npm run test -- --run",
      "git add ."
    ]
  },
  "vscode": {
    "settings": {
      "typescript.preferences.quotemark": "double",
      "editor.defaultFormatter": "biomejs.biome",
      "editor.formatOnSave": true,
      "editor.codeActionsOnSave": {
        "quickfix.biome": "explicit",
        "source.organizeImports.biome": "explicit"
      }
    },
    "extensions": [
      "biomejs.biome",
      "svelte.svelte-vscode"
    ]
  },
  "uiComponents": [
    {
      "name": "shadcn-svelte",
      "description": "Beautiful, accessible UI components for Svelte",
      "install": "npx shadcn-svelte@latest init",
      "popularity": 90,
      "useCase": "modern-web-apps",
      "documentation": "https://www.shadcn-svelte.com/",
      "priority": "recommended"
    },
    {
      "name": "Carbon Components Svelte",
      "description": "IBM Carbon Design System for Svelte",
      "install": "npm install carbon-components-svelte",
      "popularity": 85,
      "useCase": "enterprise-design-system",
      "documentation": "https://svelte.carbondesignsystem.com/",
      "priority": "optional"
    },
    {
      "name": "Konsta UI Svelte",
      "description": "Mobile-first UI components for Svelte",
      "install": "npm install konsta",
      "popularity": 70,
      "useCase": "mobile-web-apps",
      "documentation": "https://konstaui.com/svelte",
      "priority": "optional"
    }
  ],
  "tailwindHacker": {
    "autoUpgrade": true,
    "version": "latest",
    "features": [
      "css-first-config",
      "container-queries", 
      "color-mix-functions",
      "cascade-layers",
      "property-api",
      "dynamic-utilities"
    ],
    "optimizations": {
      "purgeUnused": true,
      "minifyCSS": true,
      "treeshaking": true,
      "contentScanning": "advanced"
    },
    "hackerUtils": [
      "glass-morphism",
      "neomorphism", 
      "dynamic-gradients",
      "advanced-animations",
      "responsive-utilities"
    ]
  },
  "svelteSpecific": {
    "sveltekit": true,
    "ssr": true,
    "prerendering": true,
    "stores": true,
    "reactiveStatements": true
  },
  "securityRules": [
    "Always validate props with Zod schemas",
    "Sanitize user inputs before rendering",
    "Use {@html} with extreme caution",
    "Implement proper error boundaries",
    "Validate environment variables",
    "Use HTTPS in production",
    "Implement proper CORS policies",
    "Avoid storing sensitive data in localStorage"
  ],
  "performanceRules": [
    "Use dynamic imports for code splitting",
    "Implement proper component optimization",
    "Use derived stores for computed values",
    "Avoid unnecessary reactive statements",
    "Optimize bundle size with tree shaking",
    "Use {#if} vs {#each} appropriately",
    "Implement virtual scrolling for large lists",
    "Use tick() for DOM updates timing"
  ]
}